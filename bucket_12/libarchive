	# Remove dead symlinks that confuse linker
	${RM} ${LOCALBASE}/lib/libz.so
	${RM} ${LOCALBASE}/lib/libbz2.so
	${RM} ${LOCALBASE}/lib/libexpat.so
	${RM} ${LOCALBASE}/lib/liblzma.so
