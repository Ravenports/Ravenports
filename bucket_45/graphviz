post-install-lua: [{
     args: ""
     code: <<EOS
dotprog = pkg.prefixed_path ("bin/dot")
pkg.exec({dotprog, "-c"})
EOS
}]
pre-deinstall-lua: [{
     args: ""
     code: <<EOS
configfile = pkg.prefixed_path ("lib/graphviz/%%CONFIG%%")
os.remove(configfile)
EOS
}]

