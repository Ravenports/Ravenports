--- net/net.c.orig	2019-10-01 22:31:45 UTC
+++ net/net.c
@@ -52,6 +52,11 @@
 #include "net/filter.h"
 #include "qapi/string-output-visitor.h"
 
+#include <sys/ioctl.h>
+#if defined(__FreeBSD__) || defined(__DragonFly__)
+#include <net/if.h>
+#endif
