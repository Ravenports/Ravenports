[FILE:195:files/special.mk]
# for non-GNU linkers, ensure DT_RPATH set instead of DT_RUNPATH
# See rtld man page, we need to be invulnerable to LD_LIBRARY_PATH
.if ${OPSYS} != SunOS
LDFLAGS+= -Wl,--disable-new-dtags
.endif

