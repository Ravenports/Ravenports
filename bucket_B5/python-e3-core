[FILE:199:files/build_rlimit.sh.in]
#!/bin/sh
# This script is expected to be at tools/rlimit

platform=$(%%PYCMD%% -c "import platform; print (platform.system().lower())")

cc $CFLAGS -o ../../src/e3/os/data/rlimit-$platform rlimit.c

