post-install:
.for j in colors.xml delegates.xml log.xml mime.xml \
	policy.xml quantization-table.xml thresholds.xml \
	type-apple.xml type-dejavu.xml type-ghostscript.xml \
	type-urw-base35.xml type-windows.xml type.xml
