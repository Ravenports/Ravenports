[FILE:422:files/excelwriter.gpr]
library project Excelwriter is

   for Languages use ("Ada");
   for Library_Kind use "static-pic";
   for Object_Dir use "../objs";
   for Library_Dir use "../lib";
   for Library_Name use "excelwriter_pic";

   for Source_Files use (
      "excel_out.ads",
      "excel_out.adb",
      "ieee_754.ads",
      "ieee_754-generic_double_precision.ads",
      "ieee_754-generic_double_precision.adb"
   );


end Excelwriter;

