	${MKDIR} ${STAGEDIR}${PREFIX}/share/mime/${DIR}
.endfor

pre-configure:
	${REINPLACE_CMD} -e 's|/usr/local|${LOCALBASE}|g' \
		${WRKSRC}/src/update-mime-database.cpp
	# Use local dtd
	${REINPLACE_CMD} -e 's|%%LOCALBASE%%|${LOCALBASE}|g' \
