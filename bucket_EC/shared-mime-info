[FILE:172:files/pkg-install-single.in]
#!/bin/sh

case $2 in
POST-INSTALL)
	for mdir in %%MIMEDIRS%%; do
	    if [ -d ${mdir} ]; then
		%%PREFIX%%/bin/update-mime-database ${mdir}
	    fi
	done
	exit 0
	;;
esac


[FILE:92:files/special.mk]
MIMEDIRS=	${LOCALBASE}/share/mime \
		${PREFIX}/share/mime

CLEAN_MIMEDIRS=	${MIMEDIRS:O:u}

